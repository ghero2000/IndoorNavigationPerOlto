<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.001"
        app:cardBackgroundColor="#8C4444"
        app:cardCornerRadius="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:outlineProvider="none"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="vertical">

                    <AutoCompleteTextView
                        android:textColorHint="@color/white"
                        android:hint="Starting Point"
                        android:id="@+id/startPoint"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:outlineProvider="none"
                        app:boxCornerRadiusBottomEnd="30dp"
                        app:boxCornerRadiusBottomStart="30dp"
                        app:boxCornerRadiusTopEnd="30dp"
                        app:boxCornerRadiusTopStart="30dp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ListView
                        android:id="@+id/startSuggestionListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <AutoCompleteTextView
                        android:id="@+id/endPoint"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Arrival Point"
                        android:outlineProvider="none"
                        android:textColorHint="@color/white"
                        app:boxCornerRadiusBottomEnd="30dp"
                        app:boxCornerRadiusBottomStart="30dp"
                        app:boxCornerRadiusTopEnd="30dp"
                        app:boxCornerRadiusTopStart="30dp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ListView
                        android:id="@+id/endSuggestionListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/btn_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Path Options"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_dijkstra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="300dp"
                        android:layout_marginTop="0dp"
                        android:text="Dijkstra"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_astar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="300dp"
                        android:layout_marginTop="0dp"
                        android:text="A*"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="115dp"
                android:outlineProvider="none"
                app:cardBackgroundColor="@android:color/transparent">

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:text="Show Path"
            android:id="@+id/drawBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            app:cornerRadius="30dp"
            android:backgroundTint="#00000000"/>

        <Button
            android:id="@+id/stepBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="SHOW STEPS"
            android:backgroundTint="#00000000"
            app:cornerRadius="30dp" />

    </androidx.cardview.widget.CardView>

    <com.github.chrisbanes.photoview.PhotoView
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:id="@+id/map_image"
        android:layout_width="580dp"
        android:layout_height="580dp"
        android:layout_weight="1"
        android:src="@drawable/planimetria" />
        
        <com.github.chrisbanes.photoview.PhotoView
            android:layout_weight="1"
            android:clickable="false"
            android:id="@+id/indicator_image"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:layout_width="580dp"
            android:layout_height="580dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginLeft="300dp"
            android:layout_marginTop="450dp"
            android:layout_width="100dp"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/compass_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_2"
                app:layout_constraintEnd_toStartOf="@+id/degree_text_view"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/degree_text_view"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="20dp"
                android:text="Franco"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/compass_image_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="20dp"
                android:text="Steps:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/compass_image_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_passi"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="20dp"
                android:text="124"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/compass_image_view"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginLeft="50dp"
            android:layout_marginTop="450dp"
            android:layout_width="60dp"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/btn_up"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/ic_action_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/btn_down"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="0dp"
                android:src="@drawable/ic_action_down"
                app:layout_constraintTop_toBottomOf="@+id/btn_up" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:backgroundTint="#8C4444"
            android:id="@+id/btn_avvia"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="690dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" />

    </FrameLayout>

</LinearLayout>